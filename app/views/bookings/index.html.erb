<div class="container text-center">
    <h1>Your mookings</h1>

    <% @bookings.each_with_index do |booking, index| %>
        <div>
            <div class="card">
                <h3>Mooking #<%= index + 1 %> for <%= booking.cow.name %> </h3>
                <p>Start Date: <%= booking.start_date.strftime("%d/%m/%Y") %></p>
                <p>End Date: <%= booking.end_date.strftime("%d/%m/%Y") %></p>
                <p>Cow: <%= booking.cow.name %></p>
            </div>
        </div>
    <% end %>
    <%= link_to "Back to all cows",  cows_path, class: "btn btn-flat" %>
</div>

