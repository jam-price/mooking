<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1597926749905-aa61c86141d2?ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8Y293fGVufDB8MHwwfGJsYWNrX2FuZF93aGl0ZXw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=900&q=60);">
  <div class="container text-center">
    <h1>Find a Cow</h1>
    <p>The only site for all your cow-y needs</p>
  </div>
</div>
<div class="text-center my-5 container d-flex justify-content-around">
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h3 class="card-title">Cowner</h3>
      <div class="pink-border">
        <i class="mdi mdi-account-cowboy-hat"></i>
      </div>
      <p class="card-text">Rent your cow out!</p>
      <% if user_signed_in? %>
        <%= link_to "Add Cow", new_cow_path, class: "btn btn-flat" %>
      <% else %>
        <%= link_to "Add Cow", new_user_session_path, class: "btn btn-flat" %>
      <% end %>
    </div>
  </div>
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h3 class="card-title">Cowstomer</h3>
      <div class="pink-border">
        <i class="mdi mdi-cow"></i>
      </div>
      <p class="card-text">Find a cow to rent!</p>
      <%= link_to "Find Cow", cows_path, class: "btn btn-flat" %>
    </div>
  </div>
</div>
<h3 class="text-center">See all our lovely cows</h3>
<div class="map-container container mb-3">
  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
