<div class="text-center mt-3">
  <h1>All the cows</h1>
  <%= link_to "Add a cow", new_cow_path, class:"btn btn-flat" %>
  <div class="container mx-auto d-flex justify-content-between flex-wrap">
    <% @cows.each do |cow|%>
      <%= link_to cow_path(cow), class:"mx-auto card-link" do %>
        <div class="card-trip">
          <img src="https://images.unsplash.com/photo-1564085352725-08da0272627d?ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8Y293fGVufDB8fDB8fA%3D%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1000&q=60" />
          <div class="card-trip-infos">
            <div>
              <h2> <%= cow.name %> </h2>
              <p> <%= cow.description %> </p>
            </div>
            <h2 class="card-trip-pricing">Â£<%= cow.price %>0</h2>
            <%= image_tag "cow_tongue.jpg", class: "avatar-bordered"  %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
